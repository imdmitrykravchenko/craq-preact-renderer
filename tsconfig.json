{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["dom", "esnext"],
    "downlevelIteration": true,
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
